package io.altar.example;

public class ScannerUtils {

	// Get INT from Scanner
	public int getIntFromScanner (){
		
	}
	
	// Get FLOAT from Scanner
	public float getFloatFromScanner (){
		
	}
	
	private boolean isType (String input, String type){
		switch (type){
		case "Integer":
			try{
				Integer.parseInt(input);
				return true;
			}catch (NumberFormatException e){
				System.out.println("Valor errado! Repita: ");
				return false;
			}
		case "Float":
			try{
				Float.parseFloat(input);
				return true;
			}catch (NumberFormatException e){
				System.out.println("Valor errado! Repita: ");
				return false;
			}
		default:
			return false;
		}
	}
	
}
